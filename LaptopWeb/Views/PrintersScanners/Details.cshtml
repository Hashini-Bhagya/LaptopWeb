@model LaptopWeb.Models.PrintersScanners

<h2 class="text-center mb-5">Printer or Scanner Details</h2>

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Name</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.Name</p>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Brand</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.Brand</p>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Category</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.Category</p>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Price</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.Price.ToString("C")</p>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Description</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.Description</p>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Image</label>
            <div class="col-sm-8">
                <img src="~/Images/@Model.ImageFileName" class="img-fluid" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Created At</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.CreatedAt.ToString("MM/dd/yyyy")</p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 d-grid">
                <a asp-controller="PrintersScanners" asp-action="Index" class="btn btn-outline-primary">Back to List</a>
            </div>
        </div>
    </div>
</div>
