@model LaptopWeb.Models.PrintersScanners

<h2 class="text-center mb-5">Edit Printer or Scanner</h2>

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4">Current Image</div>
                <div class="col-sm-8">
                    <img src="~/Images/@Model.ImageFileName" class="img-fluid" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">New Image</label>
                <div class="col-sm-8">
                    <input asp-for="ImageFileName" type="file" class="form-control" />
                    <span asp-validation-for="ImageFileName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created At</label>
                <div class="col-sm-8">
                    <input asp-for="CreatedAt" class="form-control" readonly />
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 d-grid">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
                <div class="col-sm-12 d-grid mt-2">
                    <a asp-controller="PrintersScanners" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
