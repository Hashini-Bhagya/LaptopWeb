@model IEnumerable<LaptopWeb.Models.Desktop>

@{
    ViewData["Title"] = "Desktops";
}

<h2>Desktops</h2>

<a asp-action="Create" class="btn btn-success">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var desktop in Model)
        {
            <tr>
                <td>@desktop.Id</td>
                <td>@desktop.Name</td>
                <td>@desktop.Brand</td>
                <td>@desktop.Category</td>
                <td>@(desktop.Price)$</td>
                <td><img src="/Images/@desktop.ImageFileName" width="100" /></td>
                <td>@desktop.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@desktop.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@desktop.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@desktop.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

